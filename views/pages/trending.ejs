<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trending Articles - Bahadurgarh News</title>
    <meta name="description" content="Trending articles from the last <%= days %> days on Bahadurgarh News">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="/" class="text-2xl font-bold text-blue-600">Bahadurgarh News</a>
                </div>
                <div class="flex items-center space-x-4">
                    <% if (user) { %>
                        <a href="/profile" class="text-gray-700 hover:text-blue-600">
                            <i class="fas fa-user"></i> <%= user.name %>
                        </a>
                        <a href="/logout" class="text-gray-700 hover:text-blue-600">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    <% } else { %>
                        <a href="/login" class="text-gray-700 hover:text-blue-600">Login</a>
                        <a href="/register" class="text-gray-700 hover:text-blue-600">Register</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Trending Articles -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Trending Articles</h1>
            <p class="text-gray-600">
                Most popular articles from the last <%= days %> days
                <% if (totalPages > 1) { %>
                    - Page <%= currentPage %> of <%= totalPages %>
                <% } %>
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-3">
                <% if (articles.length > 0) { %>
                    <div class="space-y-6">
                        <% articles.forEach((article, index) => { %>
                            <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                                <% if (article.imageUrl) { %>
                                    <img src="<%= article.imageUrl %>" alt="<%= article.title %>" class="w-full h-48 object-cover">
                                <% } %>
                                <div class="p-6">
                                    <div class="flex items-center text-sm text-gray-500 mb-2">
                                        <span class="bg-red-100 text-red-800 px-2 py-1 rounded text-xs font-semibold">
                                            <i class="fas fa-fire mr-1"></i> #<%= index + 1> Trending
                                        </span>
                                        <span class="mx-2">•</span>
                                        <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs font-semibold">
                                            <%= article.category %>
                                        </span>
                                        <span class="mx-2">•</span>
                                        <time datetime="<%= article.publishDate %>">
                                            <%= article.formattedPublishDate %>
                                        </time>
                                        <span class="mx-2">•</span>
                                        <span><%= article.readingTime %> min read</span>
                                    </div>
                                    <h2 class="text-xl font-bold text-gray-900 mb-2">
                                        <a href="/article/<%= article._id %>" class="hover:text-blue-600">
                                            <%= article.title %>
                                        </a>
                                    </h2>
                                    <p class="text-gray-600 mb-4"><%= article.shortDescription %></p>
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center text-sm text-gray-500">
                                            <i class="fas fa-user mr-2"></i>
                                            <%= article.author.name %>
                                        </div>
                                        <div class="flex items-center text-sm text-gray-500">
                                            <i class="fas fa-eye mr-1"></i>
                                            <%= article.views %> views
                                        </div>
                                    </div>
                                </div>
                            </article>
                        <% }); %>
                    </div>

                    <!-- Pagination -->
                    <% if (totalPages > 1) { %>
                        <div class="mt-8 flex justify-center">
                            <nav class="flex items-center space-x-2">
                                <% if (currentPage > 1) { %>
                                    <a href="/articles/trending?page=<%= currentPage - 1 %>" 
                                       class="px-3 py-2 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                                        Previous
                                    </a>
                                <% } %>
                                
                                <% for (let i = 1; i <= totalPages; i++) { %>
                                    <% if (i === currentPage) { %>
                                        <span class="px-3 py-2 bg-blue-600 text-white rounded-md">
                                            <%= i %>
                                        </span>
                                    <% } else { %>
                                        <a href="/articles/trending?page=<%= i %>" 
                                           class="px-3 py-2 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                                            <%= i %>
                                        </a>
                                    <% } %>
                                <% } %>
                                
                                <% if (currentPage < totalPages) { %>
                                    <a href="/articles/trending?page=<%= currentPage + 1 %>" 
                                       class="px-3 py-2 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                                        Next
                                    </a>
                                <% } %>
                            </nav>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="text-center py-12">
                        <i class="fas fa-fire text-6xl text-gray-300 mb-4"></i>
                        <h2 class="text-2xl font-bold text-gray-900 mb-2">No trending articles</h2>
                        <p class="text-gray-600 mb-6">
                            No trending articles found in the last <%= days %> days.
                        </p>
                        <a href="/" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700">
                            Browse Latest Articles
                        </a>
                    </div>
                <% } %>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <!-- Time Filter -->
                <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Time Period</h3>
                    <div class="space-y-2">
                        <a href="/articles/trending?days=7" 
                           class="block px-3 py-2 <%= days === 7 ? 'bg-blue-100 text-blue-800' : 'text-gray-700 hover:bg-gray-100' %> rounded">
                            Last 7 days
                        </a>
                        <a href="/articles/trending?days=30" 
                           class="block px-3 py-2 <%= days === 30 ? 'bg-blue-100 text-blue-800' : 'text-gray-700 hover:bg-gray-100' %> rounded">
                            Last 30 days
                        </a>
                        <a href="/articles/trending?days=90" 
                           class="block px-3 py-2 <%= days === 90 ? 'bg-blue-100 text-blue-800' : 'text-gray-700 hover:bg-gray-100' %> rounded">
                            Last 90 days
                        </a>
                    </div>
                </div>

                <!-- Categories -->
                <% if (categories && categories.length > 0) { %>
                    <div class="bg-white rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-bold text-gray-900 mb-4">Categories</h3>
                        <div class="space-y-2">
                            <% categories.forEach(category => { %>
                                <a href="/category/<%= category.slug %>" 
                                   class="block px-3 py-2 text-gray-700 hover:bg-gray-100 rounded">
                                    <%= category.name %>
                                </a>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white mt-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <div class="text-center">
                <p>&copy; 2024 Bahadurgarh News. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>
</html>
